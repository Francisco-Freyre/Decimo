<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="vinoCal.views.IngresarCorreo"
    BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout Margin="20" HorizontalOptions="Center"
                     BackgroundColor="White">
            <Label Text="¿No recuerdas tu contraseña?" HorizontalOptions="Center"
               HorizontalTextAlignment="Center" FontSize="Title" Margin="20"
                   TextColor="Black"/>
            <Label Text="Ingresa tu correo aqui para enviarte un codigo de verificacion."
                   HorizontalTextAlignment="Center" HorizontalOptions="Center"
                   TextColor="Black" FontSize="Subtitle"/>
            <Entry Placeholder="Correo" PlaceholderColor="Black"
                   BackgroundColor="White" x:Name="EntryCorreo"
                   HorizontalOptions="Center" TextColor="Black"
                   WidthRequest="300" Margin="10, 30" Keyboard="Email"/>
            <Button Text="Enviar codigo" BackgroundColor="Black"
                    TextColor="White" FontSize="Subtitle"
                    HorizontalOptions="Center" x:Name="btnEnviar"
                    Clicked="btnEnviar_Clicked"
                    WidthRequest="200" Margin="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
