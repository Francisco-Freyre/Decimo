<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:custom="clr-namespace:vinoCal.views.customViews" 
             xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
             x:Class="vinoCal.views.CatarVino"
             BackgroundColor="White">
    <ContentPage.Content>

        <Grid RowDefinitions="60,*" BackgroundColor="White">

            <Grid.Margin>
                <OnPlatform x:TypeArguments="Thickness" >
                    <On Platform="iOS" Value="0,40,0,-40" />
                    <On Platform="Android" Value="0" />
                </OnPlatform>
            </Grid.Margin>

            <custom:toolbar Grid.Row="0"></custom:toolbar>

            <StackLayout Grid.Row="1"
                         Margin="10,5"
                         BackgroundColor="White">

                <ScrollView
                    BackgroundColor="White">

                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="40"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!-- FRAME VISUAL -->

                        <Frame Grid.Row="0"
                               BackgroundColor="White">
                            <Grid RowDefinitions="40,40,*,40">

                                <!--DESCRIPCION-->
                                <Grid ColumnDefinitions="80,*"
                                      HorizontalOptions="Center"
                                      Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Image Source="visual.png"
                                           Aspect="AspectFill"
                                           Margin="5,5,-30,-3"
                                           Grid.Column="0"></Image>
                                    <Label Text="Visual"
                                           FontSize="24"
                                           Margin="-5,5,5,5"
                                           TextColor="#000"
                                           Grid.Column="1"></Label>
                                </Grid>

                                <!--BOTONES-->
                                <Grid ColumnDefinitions="*,*,*,90" 
                                      Grid.Row="1"
                                      BackgroundColor="#F2F2F2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Button Text="Capa"
                                            x:Name="btncapa"
                                            Clicked="btncapa_Capa"
                                            FontSize="10"
                                            BackgroundColor="#a22c59"
                                            TextColor="#ffff"
                                            Grid.Column="0"></Button>
                                    <Button Text="Color"
                                            x:Name="btncolor"
                                            Clicked="btncolor_Color"
                                            FontSize="10"
                                            BackgroundColor="Transparent"
                                            Grid.Column="1"></Button>
                                    <Button Text="Brillo"
                                            x:Name="btnbrillo"
                                            Clicked="btnbrillo_Brillo"
                                            FontSize="10"
                                            BackgroundColor="Transparent"
                                            Grid.Column="2"></Button>
                                    <Button Text="Viscocidad"
                                            x:Name="btnvisco"
                                            Clicked="btnvisco_Visco"
                                            FontSize="10"
                                            BackgroundColor="Transparent"
                                            Grid.Column="3"></Button>
                                </Grid>

                                <!--OPCION CAPA-->
                                <Grid ColumnDefinitions="*,*,*,*"
                                      Padding="0"
                                      Margin="0"
                                      Grid.Row="2"
                                      x:Name="capavi">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="60"></RowDefinition>
                                        <RowDefinition Height="20"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    
                                    <ImageButton Source="bajo.png"
                                                 Aspect="AspectFill"
                                                 Grid.Column="0"
                                                 Grid.Row="0"
                                                 BackgroundColor="Transparent"
                                                 BorderColor="DarkOrange"
                                                 BorderWidth="0"
                                                 x:Name="btnBajoCapa"
                                                 Clicked="btnBajoCapa_Clicked"></ImageButton>
                                    <Label Text="Baja" 
                                           HorizontalTextAlignment="Center"
                                           Grid.Column="0"
                                           Grid.Row="1"></Label>

                                    <ImageButton Source="medio.png" 
                                                 Aspect="AspectFill"
                                                 Grid.Column="1"
                                                 Grid.Row="0"
                                                 BackgroundColor="Transparent"
                                                 BorderColor="DarkOrange"
                                                 BorderWidth="0"
                                                 x:Name="btnMedioCapa"
                                                 Clicked="btnMedioCapa_Clicked"></ImageButton>
                                    <Label Text="Media" 
                                           HorizontalTextAlignment="Center"
                                           Grid.Column="1"
                                           Grid.Row="1"></Label>

                                    <ImageButton Source="medio_alto.png" 
                                           Aspect="AspectFill"
                                           Grid.Column="2"
                                           Grid.Row="0"
                                                 BackgroundColor="Transparent"
                                                 BorderColor="DarkOrange"
                                                 BorderWidth="0"
                                                 x:Name="btnMedioAltoCapa"
                                                 Clicked="btnMedioAltoCapa_Clicked"></ImageButton>
                                    <Label Text="Media-Alta" 
                                           HorizontalTextAlignment="Center"
                                           Grid.Column="2"
                                           Grid.Row="1"></Label>

                                    <ImageButton Source="alto.png" 
                                           Aspect="AspectFill"
                                           Grid.Column="3"
                                           Grid.Row="0"
                                                 BackgroundColor="Transparent"
                                                 BorderColor="DarkOrange"
                                                 BorderWidth="0"
                                                 x:Name="btnAltoCapa"
                                                 Clicked="btnAltoCapa_Clicked"></ImageButton>
                                    <Label Text="Alta" 
                                           HorizontalTextAlignment="Center"
                                           Grid.Column="3"
                                           Grid.Row="1"></Label>
                                </Grid>

                                <!--OPCION COLOR-->
                                <Grid Grid.Row="2" 
                                      RowDefinitions="*,80"
                                      x:Name="colorvi"
                                      IsVisible="false">
                                    
                                    <!--COPAS-->
                                    <Grid ColumnDefinitions="*,*,*,*"
                                          RowDefinitions="90,20,20"
                                          Grid.Row="0">

                                        <ImageButton Source="copaTinto.png"
                                                     Clicked="ImageButton_Tinto"
                                                     BackgroundColor="Transparent"
                                                     Aspect="AspectFill"
                                                     Grid.Column="0"
                                                     Grid.Row="0">
                                        </ImageButton>
                                        <CheckBox Grid.Column="0"
                                                  Grid.Row="1"
                                                  HorizontalOptions="Center"
                                                  VerticalOptions="Center"
                                                  x:Name="cktinto"
                                                  IsEnabled="False"
                                                  IsChecked="True">
                                        </CheckBox>
                                        <Label Text="Tinto"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               Grid.Column="0"
                                               Grid.Row="2"></Label>
                                        
                                        <ImageButton Source="copaRosado.png"
                                                     Clicked="ImageButton_Rosado"
                                                     BackgroundColor="Transparent"
                                                     Aspect="AspectFill"
                                                     Grid.Column="1"
                                                     Grid.Row="0">
                                        </ImageButton>
                                        <CheckBox Grid.Column="1"
                                                  Grid.Row="1"
                                                  HorizontalOptions="Center"
                                                  VerticalOptions="Center"
                                                  x:Name="ckrosado"
                                                  IsEnabled="False">
                                        </CheckBox>
                                        <Label Text="Rosado"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               Grid.Column="1"
                                               Grid.Row="2"></Label>

                                        <ImageButton Source="copaBlanco.png"
                                                     Clicked="ImageButton_Blanco"
                                                     BackgroundColor="Transparent"
                                                     Aspect="AspectFill"
                                                     Grid.Column="2"
                                                     Grid.Row="0">
                                        </ImageButton>
                                        <CheckBox Grid.Column="2"
                                                  Grid.Row="1"
                                                  HorizontalOptions="Center"
                                                  VerticalOptions="Center"
                                                  x:Name="ckblanco"
                                                  IsEnabled="False">
                                        </CheckBox>
                                        <Label Text="Blanco"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               Grid.Column="2"
                                               Grid.Row="2"></Label>

                                        <ImageButton Source="copaEspumoso.png"
                                                     Clicked="ImageButton_Espumoso"
                                                     BackgroundColor="Transparent"
                                                     Aspect="AspectFill"
                                                     Grid.Column="3"
                                                     Grid.Row="0">
                                        </ImageButton>
                                        <CheckBox Grid.Column="3"
                                                  Grid.Row="1"
                                                  HorizontalOptions="Center"
                                                  VerticalOptions="Center"
                                                  x:Name="ckespumoso"
                                                  IsEnabled="False">
                                        </CheckBox>
                                        <Label Text="Espumoso"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               Grid.Column="3"
                                               Grid.Row="2"></Label>

                                    </Grid>
                                    
                                    <!--COLORES TINTO-->
                                    <Frame CornerRadius="10"
                                           Padding="0"
                                           Margin="0"
                                           Grid.Row="1"
                                           x:Name="frametinto"
                                           IsVisible="true">
                                        <Grid ColumnDefinitions="90,*"
                                              BackgroundColor="#a22c59">
                                            <Label Text="TONALIDAD"
                                                   TextColor="#fff"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   Grid.Column="0"></Label>
                                            <Grid BackgroundColor="#fff"
                                                  Padding="5"
                                                  ColumnDefinitions="40,40,40,40"
                                                  RowDefinitions="40,20"
                                                  Grid.Column="1">

                                                <Button BackgroundColor="#9b121e"
                                                        CornerRadius="20"
                                                        Grid.Column="0"
                                                        Grid.Row="0"
                                                        BorderColor="Blue"
                                                        BorderWidth="0"
                                                        x:Name="btnRubi"
                                                        Clicked="btnRubi_Clicked"></Button>
                                                <Label Text="Rubí"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       Grid.Column="0"
                                                       Grid.Row="1"></Label>

                                                <Button BackgroundColor="#4b21c3"
                                                        CornerRadius="20"
                                                        Grid.Column="1"
                                                        Grid.Row="0"
                                                        BorderColor="DarkOrange"
                                                        BorderWidth="0"
                                                        x:Name="btnViolaceo"
                                                        Clicked="btnViolaceo_Clicked"></Button>
                                                <Label Text="Violaceo"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="10"
                                                       Grid.Column="1"
                                                       Grid.Row="1"></Label>

                                                <Button BackgroundColor="#aa1b47"
                                                        CornerRadius="20"
                                                        Grid.Column="2"
                                                        Grid.Row="0"
                                                        BorderColor="Blue"
                                                        BorderWidth="0"
                                                        x:Name="btnGranate"
                                                        Clicked="btnGranate_Clicked"></Button>
                                                <Label Text="Granate"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="10"
                                                       Grid.Column="2"
                                                       Grid.Row="1"></Label>

                                                <Button BackgroundColor="#d74514"
                                                        CornerRadius="20"
                                                        Grid.Column="3"
                                                        Grid.Row="0"
                                                        BorderColor="Blue"
                                                        BorderWidth="0"
                                                        x:Name="btnAtejado"
                                                        Clicked="btnAtejado_Clicked"></Button>
                                                <Label Text="Atejado"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="10"
                                                       Grid.Column="3"
                                                       Grid.Row="1"></Label>
                                                
                                            </Grid>
                                        </Grid>
                                    </Frame>

                                    <!--COLORES ROSADO-->
                                    <Frame CornerRadius="10"
                                           Padding="0"
                                           Margin="0"
                                           Grid.Row="1"
                                           x:Name="framerosado"
                                           IsVisible="false">
                                        <Grid ColumnDefinitions="60,*"
                                              BackgroundColor="#a22c59">
                                            <Label Text="TONALIDAD"
                                                   TextColor="#fff"
                                                   FontSize="10"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   Grid.Column="0"></Label>
                                            <Grid BackgroundColor="#fff"
                                                  Padding="5"
                                                  ColumnDefinitions="40,40,40,40,40"
                                                  RowDefinitions="40,25"
                                                  Grid.Column="1">

                                                <Button BackgroundColor="#e3baca"
                                                        CornerRadius="20"
                                                        Grid.Column="0"
                                                        Grid.Row="0"
                                                        BorderColor="DarkOrange"
                                                        BorderWidth="0"
                                                        x:Name="btnRosaPa"
                                                        Clicked="btnRosaPa_Clicked"></Button>
                                                <Label Text="Rosa Palido"
                                                       FontSize="10"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       Grid.Column="0"
                                                       Grid.Row="1"></Label>

                                                <Button BackgroundColor="#ffc5db"
                                                        CornerRadius="20"
                                                        Grid.Column="1"
                                                        Grid.Row="0"
                                                        BorderColor="DarkOrange"
                                                        BorderWidth="0"
                                                        x:Name="btnRosaCl"
                                                        Clicked="btnRosaCl_Clicked"></Button>
                                                <Label Text="Rosa claro"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="10"
                                                       Grid.Column="1"
                                                       Grid.Row="1"></Label>

                                                <Button BackgroundColor="#ff494a"
                                                        CornerRadius="20"
                                                        Grid.Column="2"
                                                        Grid.Row="0"
                                                        BorderColor="Blue"
                                                        BorderWidth="0"
                                                        x:Name="btnSalmon"
                                                        Clicked="btnSalmon_Clicked"></Button>
                                                <Label Text="Sálmon"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="10"
                                                       Grid.Column="2"
                                                       Grid.Row="1"></Label>

                                                <Button BackgroundColor="#ff5d81"
                                                        CornerRadius="20"
                                                        Grid.Column="3"
                                                        Grid.Row="0"
                                                        BorderColor="DarkOrange"
                                                        BorderWidth="0"
                                                        x:Name="btnGrossella"
                                                        Clicked="btnGrossella_Clicked"></Button>
                                                <Label Text="Grosella"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="10"
                                                       Grid.Column="3"
                                                       Grid.Row="1"></Label>

                                                <Button BackgroundColor="#f95e08"
                                                        CornerRadius="20"
                                                        Grid.Column="4"
                                                        Grid.Row="0"
                                                        BorderColor="Blue"
                                                        BorderWidth="0"
                                                        x:Name="btnNaranja"
                                                        Clicked="btnNaranja_Clicked"></Button>
                                                <Label Text="Naranja"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="10"
                                                       Grid.Column="4"
                                                       Grid.Row="1"></Label>

                                            </Grid>
                                        </Grid>
                                    </Frame>

                                    <!--COLORES BLANCO-->
                                    <Frame CornerRadius="10"
                                           Padding="0"
                                           Margin="0"
                                           Grid.Row="1"
                                           x:Name="frameblanco"
                                           IsVisible="false">
                                        <Grid ColumnDefinitions="60,*"
                                              BackgroundColor="#a22c59">
                                            <Label Text="TONALIDAD"
                                                   TextColor="#fff"
                                                   FontSize="10"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   Grid.Column="0"></Label>
                                            <Grid BackgroundColor="#fff"
                                                  Padding="5"
                                                  ColumnDefinitions="40,40,40,40,40"
                                                  RowDefinitions="40,25"
                                                  Grid.Column="1">

                                                <Button BackgroundColor="#f4f0b8"
                                                        CornerRadius="20"
                                                        Grid.Column="0"
                                                        Grid.Row="0"
                                                        BorderColor="DarkOrange"
                                                        BorderWidth="0"
                                                        x:Name="btnAmarilloPa"
                                                        Clicked="btnAmarilloPa_Clicked"></Button>
                                                <Label Text="Amarillo Palido"
                                                       FontSize="10"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       Grid.Column="0"
                                                       Grid.Row="1"></Label>

                                                <Button BackgroundColor="#e5fc5e"
                                                        CornerRadius="20"
                                                        Grid.Column="1"
                                                        Grid.Row="0"
                                                        BorderColor="DarkOrange"
                                                        BorderWidth="0"
                                                        x:Name="btnAmarilloVe"
                                                        Clicked="btnAmarilloVe_Clicked"></Button>
                                                <Label Text="Amarillo verdozo"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="10"
                                                       Grid.Column="1"
                                                       Grid.Row="1"></Label>

                                                <Button BackgroundColor="#ff9c00"
                                                        CornerRadius="20"
                                                        Grid.Column="2"
                                                        Grid.Row="0"
                                                        BorderColor="Blue"
                                                        BorderWidth="0"
                                                        x:Name="btnDorado"
                                                        Clicked="btnDorado_Clicked"></Button>
                                                <Label Text="Dorado"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="10"
                                                       Grid.Column="2"
                                                       Grid.Row="1"></Label>

                                                <Button BackgroundColor="#e45909"
                                                        CornerRadius="20"
                                                        Grid.Column="3"
                                                        Grid.Row="0"
                                                        BorderColor="Blue"
                                                        BorderWidth="0"
                                                        x:Name="btnAmbar"
                                                        Clicked="btnAmbar_Clicked"></Button>
                                                <Label Text="Ambar"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="10"
                                                       Grid.Column="3"
                                                       Grid.Row="1"></Label>

                                                <Button BackgroundColor="#daa47a"
                                                        CornerRadius="20"
                                                        Grid.Column="4"
                                                        Grid.Row="0"
                                                        BorderColor="DarkOrange"
                                                        BorderWidth="0"
                                                        x:Name="btnCobre"
                                                        Clicked="btnCobre_Clicked"></Button>
                                                <Label Text="Cobre"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="10"
                                                       Grid.Column="4"
                                                       Grid.Row="1"></Label>

                                            </Grid>
                                        </Grid>
                                    </Frame>

                                    <!--COLORES ESPUMOSO-->
                                    <Frame CornerRadius="10"
                                           Padding="0"
                                           Margin="0"
                                           Grid.Row="1"
                                           x:Name="frameespumoso"
                                           IsVisible="false">
                                        <Grid ColumnDefinitions="90,*"
                                              BackgroundColor="#a22c59">
                                            <Label Text="Tipo de burbuja"
                                                   TextColor="#fff"
                                                   HorizontalOptions="CenterAndExpand"
                                                   VerticalOptions="CenterAndExpand"
                                                   Grid.Column="0"></Label>
                                            <Grid BackgroundColor="#fff"
                                                  Padding="5"
                                                  ColumnDefinitions="*,*,*"
                                                  RowDefinitions="40,20"
                                                  Grid.Column="1">

                                                <ImageButton  Source="fina.png"
                                                        Aspect="AspectFill"
                                                        Grid.Column="0"
                                                        Grid.Row="0"
                                                              BackgroundColor="Transparent"
                                                              BorderColor="DarkOrange"
                                                              BorderWidth="0"
                                                              x:Name="btnFina"
                                                              Clicked="btnFina_Clicked"></ImageButton>
                                                <Label Text="Fina lineal"
                                                       FontSize="10"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       Grid.Column="0"
                                                       Grid.Row="1"></Label>
                                                
                                                <ImageButton  Source="media.png"
                                                        Aspect="AspectFill"
                                                        Grid.Column="1"
                                                        Grid.Row="0"
                                                              BackgroundColor="Transparent"
                                                              BorderColor="DarkOrange"
                                                              BorderWidth="0"
                                                              x:Name="btnMediaEs"
                                                              Clicked="btnMediaEs_Clicked"></ImageButton>
                                                <Label Text="Media"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="10"
                                                       Grid.Column="1"
                                                       Grid.Row="1"></Label>

                                                <ImageButton  Source="ondulada.png"
                                                        Aspect="AspectFill"
                                                        Grid.Column="2"
                                                        Grid.Row="0"
                                                              BackgroundColor="Transparent"
                                                              BorderColor="DarkOrange"
                                                              BorderWidth="0"
                                                              x:Name="btnondulada"
                                                              Clicked="btnondulada_Clicked"></ImageButton>
                                                <Label Text="Grande ondulada"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       FontSize="8"
                                                       Grid.Column="2"
                                                       Grid.Row="1"></Label>

                                            </Grid>
                                        </Grid>
                                    </Frame>


                                </Grid>

                                <!--OPCION BRILLO-->
                                <Grid ColumnDefinitions="*,*,*,*"
                                      RowDefinitions="80,20"
                                      Grid.Row="2"
                                      x:Name="brillovi"
                                      IsVisible="false">

                                    <ImageButton Source="brillob.png"
                                           Aspect="AspectFill"
                                           Grid.Column="0"
                                           Grid.Row="0"
                                                 BackgroundColor="Transparent"
                                                 BorderColor="DarkOrange"
                                                 BorderWidth="0"
                                                 x:Name="btnBajoBr"
                                                 Clicked="btnBajoBr_Clicked"></ImageButton>
                                    <Label Text="Baja" 
                                           HorizontalTextAlignment="Center"
                                           Grid.Column="0"
                                           Grid.Row="1"></Label>

                                    <ImageButton Source="brillom.png" 
                                           Aspect="AspectFill"
                                           Grid.Column="1"
                                           Grid.Row="0"
                                                 BackgroundColor="Transparent"
                                                 BorderColor="DarkOrange"
                                                 BorderWidth="0"
                                                 x:Name="btnMedioBr"
                                                 Clicked="btnMedioBr_Clicked"></ImageButton>
                                    <Label Text="Media" 
                                           HorizontalTextAlignment="Center"
                                           Grid.Column="1"
                                           Grid.Row="1"></Label>

                                    <ImageButton Source="brilloma.png" 
                                           Aspect="AspectFill"
                                           Grid.Column="2"
                                           Grid.Row="0"
                                                 BackgroundColor="Transparent"
                                                 BorderColor="DarkOrange"
                                                 BorderWidth="0"
                                                 x:Name="btnMedioAltoBr"
                                                 Clicked="btnMedioAltoBr_Clicked"></ImageButton>
                                    <Label Text="Media-Alta" 
                                           HorizontalTextAlignment="Center"
                                           Grid.Column="2"
                                           Grid.Row="1"></Label>

                                    <ImageButton Source="brilloa.png" 
                                           Aspect="AspectFill"
                                           Grid.Column="3"
                                           Grid.Row="0"
                                                 BackgroundColor="Transparent"
                                                 BorderColor="DarkOrange"
                                                 BorderWidth="0"
                                                 x:Name="btnAltoBr"
                                                 Clicked="btnAltoBr_Clicked"></ImageButton>
                                    <Label Text="Alta" 
                                           HorizontalTextAlignment="Center"
                                           Grid.Column="3"
                                           Grid.Row="1"></Label>
                                </Grid>

                                <!--OPCION VISCOCIDAD-->
                                <Grid ColumnDefinitions="*,*,*"
                                      RowDefinitions="80,20"
                                      Grid.Row="2"
                                      x:Name="viscovi"
                                      IsVisible="false">

                                    <ImageButton Source="viscocidadm.png"
                                           Aspect="AspectFill"
                                           Grid.Column="0"
                                           Grid.Row="0"
                                                 BackgroundColor="Transparent"
                                                 BorderColor="DarkOrange"
                                                 BorderWidth="0"
                                                 x:Name="btnMediaVi"
                                                 Clicked="btnMediaVi_Clicked"></ImageButton>
                                    <Label Text="Media" 
                                           HorizontalTextAlignment="Center"
                                           Grid.Column="0"
                                           Grid.Row="1"></Label>

                                    <ImageButton Source="viscocidadma.png" 
                                           Aspect="AspectFill"
                                           Grid.Column="1"
                                           Grid.Row="0"
                                                 BackgroundColor="Transparent"
                                                 BorderColor="DarkOrange"
                                                 BorderWidth="0"
                                                 x:Name="btnMediaAltaVi"
                                                 Clicked="btnMediaAltaVi_Clicked"></ImageButton>
                                    <Label Text="Media-Alta" 
                                           HorizontalTextAlignment="Center"
                                           Grid.Column="1"
                                           Grid.Row="1"></Label>

                                    <ImageButton Source="viscocidada.png" 
                                           Aspect="AspectFill"
                                           Grid.Column="2"
                                           Grid.Row="0"
                                                 BackgroundColor="Transparent"
                                                 BorderColor="DarkOrange"
                                                 BorderWidth="0"
                                                 x:Name="btnAltaVi"
                                                 Clicked="btnAltaVi_Clicked"></ImageButton>
                                    <Label Text="Alta" 
                                           HorizontalTextAlignment="Center"
                                           Grid.Column="2"
                                           Grid.Row="1"></Label>
                                </Grid>

                                <!--PICKER VISUAL-->
                                <Grid Grid.Row="3">
                                    <Picker x:Name="pickerVisual"
                                            Title="Calificación"
                                            BackgroundColor="White"
                                            TitleColor="Black"
                                            SelectedIndexChanged="pickerVisual_SelectedIndexChanged">
                                        <Picker.ItemsSource>
                                            <x:Array Type="{x:Type x:String}">
                                                <x:String>0</x:String>
                                                <x:String>0.1</x:String>
                                                <x:String>0.2</x:String>
                                                <x:String>0.3</x:String>
                                                <x:String>0.4</x:String>
                                                <x:String>0.5</x:String>
                                                <x:String>0.6</x:String>
                                                <x:String>0.7</x:String>
                                                <x:String>0.8</x:String>
                                                <x:String>0.9</x:String>
                                                <x:String>1</x:String>
                                            </x:Array>
                                        </Picker.ItemsSource>
                                    </Picker>
                                </Grid>

                            </Grid>
                        </Frame>

                        <!-- FRAME AROMATICA -->
                        <Frame Grid.Row="1"
                               BackgroundColor="White">
                            <Grid RowDefinitions="40,40,*,40">

                                <!--DESCRIPCION-->
                                <Grid ColumnDefinitions="80,*"
                                      HorizontalOptions="Center"
                                      Grid.Row="0">
